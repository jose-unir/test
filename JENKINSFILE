pipeline {
    agent any

     stages {
        stage('Get Code') {
            steps {
                // Obtener c√≥digo del repo
                git 'https://github.com/jose-unir/test.git'
                sh 'ls -la'
                echo "${WORKSPACE}"
            }
        }
    
        stage('Build') {
           steps {
              echo 'Eyyy, esto es Python. No hay que compilar nada!!!'
           }
        }
        
        stage('Tests')
        {
            parallel
            {

                stage('Unit') {
                            steps {
                                catchError(buildResult: 'UNSTABLE', stageResult: 'FAILURE') {
                                    sh '''
                                        export PYTHONPATH=.
                                        pytest --junitxml=result-unit.xml test/unit
                                    '''
                                }
                            }
                }
                
                        
                stage('Rest') {
                    steps {
                        catchError(buildResult: 'UNSTABLE', stageResult: 'FAILURE') {
                            sh '''
                                export FLASK_APP=app/api.py
                                nohup flask run &
                                nohup java -jar /home/josito/.git/helloworld/test/wiremock/wiremock-standalone-3.13.2.jar --port 9090 --root-dir /home/josito/.git/helloworld/test/wiremock &
                                
                               sleep 10
                                
                                pytest --junitxml=result-rest.xml test/rest
                            '''
                        }
                    }
                }        
            }
        }
        
        stage ('Results') {
            steps {
                junit 'result*.xml'
            }
        }        
     }
}
